generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Station {
  id            Int            @id @map("station_id") 
  city          String?
  country       String?
  latitude      Float
  longitude     Float
  lastUpdated   DateTime?      
  measurements  Measurement[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([city])
  @@index([country])
}


model Measurement {
  id          Int       @id @default(autoincrement())
  station     Station   @relation(fields: [stationId], references: [id])
  stationId   Int
  parameter   String   
  value       Float
  unit        String    
  timestamp   DateTime 
  createdAt   DateTime  @default(now())

  @@index([stationId, parameter, timestamp])
  @@unique([stationId, parameter, timestamp]) // prevents duplicates
}